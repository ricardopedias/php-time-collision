{
    "name": "ricardopedias/php-business-hours",
    "type": "library",
    "description": "Biblioteca para calculos de hor√°rio comercial com PHP",
    "keywords": [
        "helpers",
        "library"
    ],
    "authors": [
        {
            "name": "Ricardo Pereira Dias",
            "email": "contato@ricardopedias.com.br",
            "role": "lead"
        }
    ],
    "support": {
        "docs": "https://github.com/ricardopedias/php-business-hours",
        "issues": "https://github.com/ricardopedias/php-business-hours/issues",
        "source": "https://github.com/ricardopedias/php-business-hours"
    },
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "league/flysystem": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^0.12.36",
        "squizlabs/php_codesniffer": "3.*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Business\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts":{
        "test":"vendor/bin/phpunit --testdox $1",
        "psr": "vendor/bin/phpcs --standard=PSR1,PSR2,PSR12 src",
        "analyse" : "vendor/bin/phpstan analyse src --level 8"
    }
}
